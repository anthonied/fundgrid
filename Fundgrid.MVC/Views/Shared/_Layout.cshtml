		<link href="@Href("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
		<link href="@Href("~/Content/body.css")" rel="stylesheet")" type="text/css" />
		<link href="@Href("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
		<link href="@Href("~/Content/bootstrap-mvc-validation.css")" rel="stylesheet" type="text/css" />
		<link href="@Href("~/Content/Custom.css")" rel="stylesheet")" type="text/css" />
        
		<script src="@Href("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
		<script src="@Href("~/Scripts/jquery-migrate-1.9.1.min.js")" type="text/javascript"></script>
		<script src="@Href("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Href("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
        <script src="@Href("~/scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
