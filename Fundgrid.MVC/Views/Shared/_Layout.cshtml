		@RenderSection("scripts", required: false)
		<script>
			function masterViewModel()
			{
				$('.nav li a').click(function (e)
				{
					$('.nav li a').removeClass('active');
					var $this = $(this);
					$this.addClass('active');
					//e.preventDefault();
				});
			}

			ko.applyBindings(new masterViewModel(), document.getElementById('navBar'));
		</script>
    </body>
</html>
