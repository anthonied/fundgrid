										<li id="Home"><a  href="@Href("~/")">Home</a></li>
										<li><a href="#AboutModal" role="button" data-toggle="modal" >About</a></li>
										<li id="ContactUs"><a href="@Href("~/Home/Contact/")">Contact Us</a></li>
										<li id="Dropdown" class="dropdown">
											<a href="#" class="dropdown-toggle" data-toggle="dropdown">Projects<b class="caret"></b></a>
											<ul class="dropdown-menu pull-right">
                                                <li class="divider"></li>
												<li id="manageProjects"><a href="@Href("~/Project")"">Manage Projects</a></li>
                                                <li id="donateProjects"><a href="@Href("~/Project/Donate")"">Donate</a></li>
                                                <li class="divider"></li>
											  </ul>
										</li>
									</ul>
									<ul class="nav pull-right">
										<li id="Register"><a href="@Href("~/Account/Register")">Register</a></li>
										<li id="Login"><a href="@Href("~/Account/Login")">Login</a></li>
									</ul>
								</div>
						</div>
					</div>
				</div>	
			</nav>
		</header>
        <div id="body">
			<div class="container-fluid">
				<div class="row-fluid">
					<div class="span3">
						<div class="well sidebar-nav">
							<ul class="nav nav-list">
								<li class="nav-header">Sidebar</li>
								<li id="manageProjects"><a href="@Href("~/Project")"">Manage Projects</a></li>
                                <li id="donateProjects"><a href="@Href("~/Project/Donate")"">Donate</a></li>
								<li class="nav-header">Page Navigation</li>
								<li id="sbHome"><a href="/.">Home</a></li>
								<li><a href="#AboutModal" role="button" data-toggle="modal">About</a></li>
								<li id="sbContactUs"><a href="@Href("~/Home/Contact")">Contact Us</a></li>
								<li id="sbRegister"><a href="@Href("~/Account/Register")">Register</a></li>
								<li id="sbLogin"><a href="@Href("~/Account/Login")">Login</a></li>

							</ul>
						</div> <!--/.well -->
					</div> <!--/span-->
					<div class="span9">
						@RenderBody()
					</div> <!--/span-->
				</div> <!--/row-->
				<hr>
			</div> <!--/.fluid-container-->
		</div>

		<footer>
			<div class="container-fluid">
				<ul class="nav nav-pills">
					<li><a href="@Href("~/")">Home</a></li>
					<li><a href="#AboutModal" role="button" data-toggle="modal" >About</a></li>
					<li><a href="@Href("~/Home/Contact")">Contact Us</a></li>
				</ul>
				<p>&copy; SolutionServer @DateTime.Today.Year</p>
			</div>
		</footer>

